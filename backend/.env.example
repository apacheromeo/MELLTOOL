# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?schema=public
DATABASE_URL=postgresql://postgres:CHANGE_ME_STRONG_PASSWORD@localhost:5432/inventory_db?schema=public

# ============================================
# REDIS CONFIGURATION
# ============================================
# Redis connection for caching and sessions
REDIS_URL=redis://localhost:6379
# Optional: Redis password for production
# REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ============================================
# JWT AUTHENTICATION
# ============================================
# CRITICAL: Generate strong random secret using: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_USE_OPENSSL_RAND_BASE64_64_TO_GENERATE
JWT_REFRESH_SECRET=CHANGE_ME_USE_DIFFERENT_SECRET_FROM_ACCESS
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=production
PORT=3001

# Frontend URL for CORS (important for security)
FRONTEND_URL=https://your-domain.com
# For local development: http://localhost:3000

# API Rate Limiting (requests per 15 minutes)
RATE_LIMIT_TTL=900
RATE_LIMIT_MAX=100

# ============================================
# SECURITY SETTINGS
# ============================================
# Session secret for express-session
SESSION_SECRET=CHANGE_ME_USE_OPENSSL_RAND_BASE64_32_TO_GENERATE

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================
# FILE UPLOAD SETTINGS
# ============================================
MAX_FILE_SIZE=5242880
# 5MB in bytes
UPLOAD_DIR=./uploads

# ============================================
# MONITORING & LOGGING
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Sentry DSN for error tracking (optional but recommended)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# EMAIL SETTINGS (Optional)
# ============================================
# For notifications and alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@your-domain.com

# ============================================
# SHOPEE INTEGRATION (Optional)
# ============================================
SHOPEE_PARTNER_ID=your_partner_id
SHOPEE_PARTNER_KEY=your_partner_key
SHOPEE_REDIRECT_URL=https://your-domain.com/api/shopee/callback

# ============================================
# BACKUP SETTINGS
# ============================================
# S3-compatible storage for backups (AWS S3, MinIO, etc.)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=inventory-backups
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_REGION=ap-southeast-1

# ============================================
# SECURITY NOTES
# ============================================
# 1. NEVER commit this file with real values to git
# 2. Generate all secrets using cryptographically secure methods
# 3. Use different secrets for development and production
# 4. Rotate secrets regularly (every 90 days minimum)
# 5. Store production secrets in environment variables or secret manager
# 6. Enable 2FA on all cloud provider accounts
# 7. Use strong, unique passwords for all services
# ============================================
